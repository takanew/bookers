<!--投稿一覧-->
<h1>Books</h1>
<table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
<% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%=link_to "Show" , book_path(book.id) %></td>
      <td><%=link_to "Edit" , edit_book_path(book.id) %></td>
      <td><%=link_to "Destroy" , url: '/books:id' %></td>
    </tr>
<% end %>
</table>

<!--新規投稿-->
<h1>New book</h1>

<%= form_with model: @book do |f| %>

<h4>title</h4>
<%= f.text_field :title %>

<h4>body</h4>
<%= f.text_area :body %>

<p><%= f.submit 'Create Book' %></p>

<% end %>
